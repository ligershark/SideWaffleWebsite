@using System.Web.Caching;
@{
    if (!Request.IsLocal)
    {
        Response.Cache.SetValidUntilExpires(true);
        Response.Cache.SetCacheability(HttpCacheability.ServerAndPrivate);
        Response.AddCacheDependency(new CacheDependency(Server.MapPath("~/")));
        Response.AddCacheDependency(new CacheDependency(Server.MapPath("~/app_data")));
        Response.AddCacheDependency(new CacheDependency(Server.MapPath("~/feed/web")));
        Response.AddCacheDependency(new CacheDependency(Server.MapPath("~/img")));
    }  
}

